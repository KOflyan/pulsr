{
  "name": "pulsr",
  "author": "koflyan",
  "license": "MIT",
  "version": "0.0.1",
  "description": "Simple node process manager",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "rimraf dist && tsc",
    "test": "jest --passWithNoTests",
    "format": "prettier --write .",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "12.1.0",
    "pidusage": "3.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.0",
    "@eslint/migrate-config": "^1.2.0",
    "@types/jest": "29.5.12",
    "@types/node": "22.2.0",
    "@types/pidusage": "2.0.5",
    "@typescript-eslint/eslint-plugin": "8.0.1",
    "@typescript-eslint/parser": "8.0.1",
    "eslint": "9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "lint-staged": "15.2.8",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "ts-jest": "29.2.4",
    "ts-node": "10.9.2",
    "typescript": "5.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check",
      "npm run test"
    ]
  },
  "keywords": [
    "node",
    "process",
    "manager",
    "loadbalancer"
  ]
}

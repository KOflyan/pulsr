{
  "verbose": true,
  "clearMocks": true,
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "json", "ts"],
  "coverageProvider": "v8",
  "rootDir": ".",
  "slowTestThreshold": 1,
  "testRegex": ".*\\.spec\\.ts$",
  "coveragePathIgnorePatterns": ["node_modules"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["<rootDir>/src/**/*.(t|j)s"],
  "coverageDirectory": "../coverage"
}
